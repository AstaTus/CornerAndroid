<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_card_head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:scaleType="fitCenter"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="true" />
            <TextView
                android:id="@+id/image_card_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_card_head_image"
                android:layout_centerVertical="true"
                android:text="碎不醒"/>
            <TextView
                android:id="@+id/image_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1998-3-4"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/cheese_4"
            />
        <TextView
            android:id="@+id/image_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="message text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/image_card_location_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_location_on_black_18dp"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/image_card_corner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsdsd"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_card_location_image"/>
            <TextView
                android:id="@+id/image_card_corner_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_card_corner_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="8km"/>

            <ImageView
                android:id="@+id/image_card_up_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_favorite_border_black_24dp"
                android:layout_toLeftOf="@+id/image_card_comment_btn"/>
            <ImageView
                android:id="@id/image_card_comment_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_marginRight="12dp"
                android:layout_alignBaseline="@id/image_card_up_btn"
                android:layout_toLeftOf="@+id/image_card_more_btn"/>
            <ImageView
                android:id="@id/image_card_more_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_more_horiz_black_24dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/image_card_up_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="33个赞"/>
            <TextView
                android:id="@+id/image_card_read_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="33次阅读"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>